@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Hotel1.jpg" alt="Hotel1" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Vivez le luxe, façon GrandHotel!
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/images/Hotel2.jpg" alt="Hotel2" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    La piscine de vos rêves avec vue sur l'océan!
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<style>
    .nav-pills > li {
        margin-left: 10em;
        margin-right: 2em;
    }
</style>



<nav class="navbar">
    <ul class="nav nav-pills h3" role="tablist">
        @*reservation*@
        <li>
            <a asp-controller="Reservations" asp-action="Index">Réservation</a>
        </li>
        @*Client*@
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Client<span class="caret" /></a>
            <ul class="dropdown-menu">
                <li><a asp-controller="Account" asp-action="Register">Créer un compte</a></li>
                <li><a asp-controller="Clients" asp-action="Edit">Modifier mes coordonnées</a></li>
                <li><a asp-controller="Factures" asp-action="Index">Voir mes factures</a></li>
            </ul>
        </li>
        @*Gestion interne*@
        <li>
            <a asp-controller="GestionInterne" asp-action="Index">Gestion Interne</a>
        </li>

    </ul>
</nav>

