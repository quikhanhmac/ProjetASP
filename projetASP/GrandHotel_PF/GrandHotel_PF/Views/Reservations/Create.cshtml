@model GrandHotel_PF.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumChambre" class="control-label"></label>
                <select asp-for="NumChambre" class ="form-control" asp-items="ViewBag.NumChambre"></select>
            </div>
            <div class="form-group">
                <label asp-for="Jour" class="control-label"></label>
                <select asp-for="Jour" class ="form-control" asp-items="ViewBag.Jour"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdClient" class="control-label"></label>
                <select asp-for="IdClient" class ="form-control" asp-items="ViewBag.IdClient"></select>
            </div>
            <div class="form-group">
                <label asp-for="NbPersonnes" class="control-label"></label>
                <input asp-for="NbPersonnes" class="form-control" />
                <span asp-validation-for="NbPersonnes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Travail" class="control-label"></label>
                <input asp-for="Travail" class="form-control" />
                <span asp-validation-for="Travail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

