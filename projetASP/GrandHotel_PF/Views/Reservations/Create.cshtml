@model GrandHotel_PF.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h2>Reservation</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Jour" class="control-label"></label>
                @*<select asp-for="Jour" class ="form-control" asp-items="ViewBag.Jour"></select>*@
                <input asp-for="Jour" class="form-control" asp-items="@ViewBag.Jour"/>
            </div>
            <div class="form-group">
                <label class="control-label">Nombre de nuits</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Nombre de personnes</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HeureArrivee" class="control-label"></label>
                <input asp-for="HeureArrivee" class="form-control" asp-items="@ViewBag.HeureArrivee"/>
            </div>
            <div class="form-group">
                <label class="control-label">Séjour</label>
                <select>
                    <option class="form-control" value="False"></option>
                    <option class="form-control" value="True">Travail</option>
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
